<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BKWitten_App_Frontend.ViewModels"
             x:Class="BKWitten_App_Frontend.Pages.MainPage"
             Title="BKWInfo"
             Background="Lavender">

    <ContentPage.BindingContext>
        <local:EventsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <!-- Suchfeld -->
            <Frame Margin="30,30" CornerRadius="10" BorderColor="Gray" Padding="0">
                <Entry Placeholder="suchen..." 
                       BackgroundColor="Transparent"
                       Visual="Default" />
            </Frame>

            <!-- Dynamische Liste der Events die aus dem EventsViewModel gebindet wird -->
            <CollectionView ItemsSource="{Binding EventsList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="30,10" CornerRadius="10" BorderColor="Gray" Padding="10">
                            <HorizontalStackLayout>
                                <Image Source="image_placeholder.png" WidthRequest="50" HeightRequest="50" Margin="0,0,10,0" />
                                <VerticalStackLayout>
                                    <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Medium" />
                                    <Label Text="{Binding Description}" FontSize="Small" LineBreakMode="WordWrap" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

